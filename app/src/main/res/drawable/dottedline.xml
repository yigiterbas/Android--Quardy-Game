<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#ffffffff"
                android:dashGap="3dp"
                android:dashWidth="2dp" />

            <solid android:color="@android:color/transparent" />


        </shape>
    </item>
</layer-list>
